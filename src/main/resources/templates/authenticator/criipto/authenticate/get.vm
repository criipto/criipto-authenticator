#define ($_body)

    #if ($_errors.toArray()[0]=='validation.error.personalNumber.required')
        #set($_errorClass = "is-error is-error-danger")
    #end

    #parse("fragments/jquery")


    #set($isHidden = "hidden")
    #if ($error)
        #set($isHidden = "not-hidden")
    #end
<div class="mt3 px3 lg-px4" id="user-error" $!isHidden>
    <div class="alert alert-danger px4">
        $!error<br>
    </div>
</div>

<form id="personalNumberForm" method="post" action="$_authUrl">

    <div class="sm-col-12 center">
        <h2>Get started</h2>
    </div>
    <label for="personalNumber" class="$!_errorClass">Enter your personal number</label>
    <input type="text" id="personalNumber" name="personalNumber" class="block full-width mb1 field-light $!_errorClass"
           autocapitalize="none"
           required
           value="$!personalNumber">

    <button type="submit" class="button button-fullwidth button-primary">Continue</button>

</form>
#end

#parse("layouts/default")
